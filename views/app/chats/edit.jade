extends ../../layout.jade
block contenido
    div(class="col-md-8 remove-float center-block text-center big-to-space")
        h1 Editar Chat
        form(action="/app/chats/#{chat.id}?_method=PUT", method="POST")
            div(class="form-group")
                label(for="title") Título
                input(id="title", type="text", name="title", placeholder="Título de la imagen...", class="form-control", value="#{chat.title}")
            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit", value="Guardar", class="btn btn-info")